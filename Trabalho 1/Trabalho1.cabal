build-type:         Simple
extra-source-files: CHANGELOG.md

executable Trabalho1
  main-is:          Main.hs
  other-modules:
    ArithmeticExpressions
    ArithmeticExpressionsSpec
    BlocksAndCommandLists
    Commands
    FunctionsAndParameters
    Lexer
    LexerTest
    LogicalExpressions
    ProgramParser
    RelationalExpressions
    Tests
    Types
    VariableDeclarations

  -- other-extensions:
  build-depends:
    , base        >=4.14.3.0
    , hspec       >=2.7.7
    , mtl         >=2.3.1
    , parsec      >=3.1.14.0
    , QuickCheck  >=2.14.2

  hs-source-dirs:   app app/Modules app/Tests
  default-language: Haskell2010
  ghc-options:      -Wno-tabs
